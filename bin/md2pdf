#!/bin/sh

# TODO
# * add a option flag so that it can check if its markdown
#   and render it as a pdf with pandoc.

MDFILE=${1}

if [ -n "$MDFILE" ]; then

    TMPFILE="${HOME}/tmp/.temp.pdf"
    rm ${TMPFILE} > /dev/null 2>&1

    pandoc --latex-engine=xelatex -s -o "${TMPFILE}" "${MDFILE}"
    zathura ${TMPFILE}
fi
