#!/bin/sh

XCOLORSCHEME_DIR=$HOME/lib/colorschemes
XCOLORSCHEME_TARGET=$HOME/.config/xcolor/scheme

# Simple symlink setter for changing the colorscheme
if [ -z "$1" ]; then
    ls $XCOLORSCHEME_DIR
else
    target_dir=$(dirname $XCOLORSCHEME_TARGET)
    if [ ! -d "$target_dir" ]; then
        mkdir -p $target_dir
    fi
    if [ -f "$XCOLORSCHEME_TARGET" ]; then
        rm $XCOLORSCHEME_TARGET
    fi
    ln -s $XCOLORSCHEME_DIR/$1 $XCOLORSCHEME_TARGET
fi
