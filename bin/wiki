#!/bin/sh

VIMWIKI_DIR=${VIMWIKI_DIR:-$HOME/usr/wiki}

if [ -z "$@" ]; then
    vim -c VimwikiIndex

elif [ $1 = 'git' ]; then
    shift && git -C ${VIMWIKI_DIR} ${@}

elif [ $1 = 'tree' ]; then
    shift && tree ${VIMWIKI_DIR} ${@}

elif [ $1 = 'today' ]; then
    vim -c VimwikiMakeDiaryNote

else
    echo "Usage: ${0} [git] [args ...]"
fi
