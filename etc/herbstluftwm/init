#!/usr/bin/env sh

# this is a simple config for herbstluftwm

hc() {
    herbstclient "$@"
}

hc emit_hook reload

# Reapply certain XORG settings (do not fork this)
$HOME/etc/xorg/wminit &

# Apply keybindings
$HOME/etc/herbstluftwm/keybinds &

# Enable custom rules
$HOME/etc/herbstluftwm/rules &

# Set the theme
$HOME/etc/herbstluftwm/theme &
