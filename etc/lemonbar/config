#!/bin/sh

# Import modules needed but anything that imports this config
. $HOME/lib/shell/xrdb_colors
. $HOME/etc/lemonbar/utils/wrappers
. $HOME/etc/lemonbar/utils/multi_monitor_support
. $HOME/etc/lemonbar/utils/logger

# Config variables used by all components of lemonbar
# ---------------------------------------------------

# Primary FIFOs
PANEL_TOP_FIFO=/tmp/panel_top.fifo
PANEL_BOT_FIFO=/tmp/panel_bot.fifo

# Event FIFOs
EVENT_BKL_FIFO=/tmp/backlight_event.fifo
EVENT_VOL_FIFO=/tmp/volume_event.fifo
EVENT_WSP_FIFO=/tmp/workspace_event.fifo
EVENT_WIN_FIFO=/tmp/wininfo_event.fifo

# Choose the output wrapper
MSG_WRAPPER=icon_wrapper

# Specify the Anchor Character for each module
ANCHOR_BACKLIGHT='L'
ANCHOR_BATTERY='B'
ANCHOR_CPU='C'
ANCHOR_DATE='D'
ANCHOR_FILESYSTEMS='F'
ANCHOR_MEMORY='M'
ANCHOR_NETWORK='N'
ANCHOR_SWAP='S'
ANCHOR_SPOTIFY='J'
ANCHOR_TIME='T'
ANCHOR_WHOAMI='U'
ANCHOR_WININFO='X'
ANCHOR_WORKSPACES='W'
ANCHOR_VOLUME='V'

# Refresh rates of non-event based modules
REFRESH_BATTERY=2
REFRESH_CPU=3
REFRESH_DATE=86400
REFRESH_FILESYSTEMS=10
REFRESH_MEMORY=3
REFRESH_NETWORK=2
REFRESH_SWAP=3
REFRESH_TIME=1

# Actual Siji icons for various modules
ICON_BACKLIGHT=$(env printf "\ue1c3")
ICON_BATTERY=$(env printf "\ue1ff")
ICON_CPU=$(env printf "\ue026")
ICON_DATE=$(env printf "\ue266")
ICON_FILESYSTEMS=$(env printf "\ue1d8")
ICON_MEMORY=$(env printf "\ue021")
ICON_NETWORK=$(env printf "\ue222")
ICON_SWAP=$(env printf "\ue0c5")
ICON_TIME=$(env printf "\ue015")
ICON_WHOAMI=$(env printf "\ue1ce")
ICON_WORKSPACES=$(env printf "\ue1d7")
ICON_VOLUME=$(env printf "\ue04d")

# Powerline Icons
PL_R=$(env printf "\ue0b0")
PL_Rb=$(env printf "\ue0b1")
PL_L=$(env printf "\ue0b2")
PL_Lb=$(env printf "\ue0b3")

# Hardware Specification
WIFI_INTERFACE="wlp82s0"
ETHERNET_INTERFACE="enp0s31f6"
FILESYSTEMS="/dev/nvme0n1p4 /home/zamlz/tmp"

# Source local system config in case there are system specific changes
. $HOME/.config/lemonbar/config
